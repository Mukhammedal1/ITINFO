<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
        #div2{
            border: 2px solid black;
            padding: 10px 10px;
            margin: 20px 15px;
        }
        ul div li{
            list-style-type: none;
        }
    </style>
  </head>

  <body>

    <div>
      <ul>
        {{#each topics}}
          <div id="div2">
            <li>{{this.title}}</li>
            <li>{{this.text}}</li>
          </div>
        {{/each}}
      </ul>
    </div>

  </body>
</html>